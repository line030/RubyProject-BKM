<h1>Listing aims</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <!--<th>Einheit</th> -->
    <th>Category</th>
    <th></th>
    <th></th>
  </tr>

<% @aims.each do |aim| %>
  <tr>
    <td><%= aim.name %></td>
    <td><%= aim.value %></td>
    <!--<td><%= aim.category.unit.name%></td> -->
    <td><%= @categories[aim.id] %></td>
    <td><%= link_to 'Show', aim %></td>
    <td><%= link_to 'Edit', edit_aim_path(aim) %></td>
    <td><%= link_to 'Destroy', aim, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

